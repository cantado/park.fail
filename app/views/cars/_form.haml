= form_for @car do |f|
  - if @car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @car.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :rating_points
    = f.number_field :rating_points
  .field
    = f.label :rating_count
    = f.number_field :rating_count
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
